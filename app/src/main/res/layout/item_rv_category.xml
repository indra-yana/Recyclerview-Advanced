<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_item_category_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/btn_item_more"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="8dp"
            android:layout_toStartOf="@+id/btn_item_more"
            android:maxLines="1"
            android:text="@string/title_lorem_ipsum"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_item_more"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:text="@string/title_more" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_sub_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn_item_more"
            android:layout_marginTop="10dp"
            android:clipToPadding="false" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>